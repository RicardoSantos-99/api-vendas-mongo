{
  "compilerOptions": {                        
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",
    "baseUrl": "./", 
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"],
    },                           
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,  
    "experimentalDecorators":true                     
  },
  "exclude":[
    "./node_modules"
  ]
}